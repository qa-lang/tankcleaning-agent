
import pandas as pd
import os

DATA_DIR = os.path.join(os.path.dirname(__file__), '..', 'data')

def load_transitions():
    return pd.read_csv(os.path.join(DATA_DIR, 'transitions.csv'))

def load_cargo_metadata():
    return pd.read_csv(os.path.join(DATA_DIR, 'cargo_metadata.csv'))

def load_cleaning_codes():
    return pd.read_csv(os.path.join(DATA_DIR, 'cleaning_codes.csv'))

def load_memos():
    return pd.read_csv(os.path.join(DATA_DIR, 'memos.csv'))
